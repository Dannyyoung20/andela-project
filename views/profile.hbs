                                    <path stroke="null" id="svg_5" fill="#ffffff" d="m46.719599,24.769792l-43.518844,0c-0.709702,0 -1.284929,-1.125 -1.284929,-2.512c0,-1.389 0.575227,-2.514 1.284929,-2.514l43.518844,0c0.709702,0 1.284929,1.125 1.284929,2.514c0,1.387 -0.575227,2.512 -1.284929,2.512z"
                                    />
                                    <path d="M88.3,43.367H3.188c-1.388,0-2.513-1.125-2.513-2.514c0-1.387,1.125-2.512,2.513-2.512H88.3   c1.388,0,2.513,1.125,2.513,2.512C90.813,42.242,89.688,43.367,88.3,43.367z"
                                        fill="#ffffff" />
                                    <path stroke="null" id="svg_7" fill="#ffffff" d="m87.517686,62.579621l-41.566111,0c-0.677857,0 -1.227273,-1.125 -1.227273,-2.513s0.549416,-2.513 1.227273,-2.513l41.566111,0c0.677857,0 1.227273,1.125 1.227273,2.513s-0.549416,2.513 -1.227273,2.513z"
